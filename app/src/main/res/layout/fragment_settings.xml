<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFD8DC"
    android:orientation="vertical"
    tools:context=".fragments.Settings">

    <TextView
        android:id="@+id/push_notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:layout_margin="15dp"
        android:textColor="#000"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
        android:text="Push Notifications" />

    <TextView
        android:id="@+id/get_notified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/push_notifications"
        android:textColor="#000"
        android:text="Get Notified" />

    <Switch
        android:id="@+id/push_notif_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/get_notified"
        android:layout_toEndOf="@+id/get_notified"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/push_notifications"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp"/>

</RelativeLayout>